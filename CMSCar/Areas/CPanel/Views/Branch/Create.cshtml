@model BranchDTO
@{
    ViewData["Title"] = "انشاء فرع جديد";
    Layout = null;
}

<form asp-action="Create" method="post" class="ajaxForm" tname="#dataTableId">
    <input asp-for="CityId" value="@ViewBag.id" type="hidden" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NameAr"></label>
                <input asp-for="NameAr" class="form-control" />
                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NameEn"></label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="WhatsappNumber"></label>
                <input asp-for="WhatsappNumber" class="form-control" />
                <span asp-validation-for="WhatsappNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="MapLink"></label>
                <input asp-for="MapLink" class="form-control" />
                <span asp-validation-for="MapLink" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="WorkingHoursAr"></label>
                <textarea rows="4" asp-for="WorkingHoursAr" class="form-control"></textarea>
                <span asp-validation-for="WorkingHoursAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="WorkingHoursEn"></label>
                <textarea rows="4" asp-for="WorkingHoursEn" class="form-control"></textarea>
                <span asp-validation-for="WorkingHoursEn" class="text-danger"></span>
            </div>
        </div>
    </div>

    <hr />
    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">الغاء</button>
    </div>
</form>
<script>
    PageLoadActions();
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>