@model CMSCar.Areas.CPanel.Models.PurchaseOrders.CompanyCash

@{
    ViewData["Title"] = "تفاصيل طلب الشراء";
    Layout = null;
}

<h1>تفاصيل طلب الشراء</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            إسم الشركة:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameCompany)
        </dd>
        <dt class="col-sm-2">
            رقم الهاتف:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
           : البريد الالكتروني
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
           : اسم الشخص المسؤول بالشركة
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NamePerson)
        </dd>

        <dt class="col-sm-2">
            تاريخ الارسال :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            السيارات المطلوبة
        </dt>
        <dd class="col-sm-10">

            @foreach (var item in Model.carOrders)
            {
                <p> السيارة : @item.NameCar || العدد : @item.Count</p>
            }

        </dd>
    </dl>
</div>
