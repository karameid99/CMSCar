@model WhyUsDTO
@{
    ViewData["Title"] = "تعديل ";
    Layout = null;
}

<form asp-action="Edit" method="post" class="ajaxForm" tname="#dataTableId" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" class="form-control" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NameAr"></label>
                <input asp-for="NameAr" class="form-control" />
                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NameEn"></label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="p-3 mb-2 text-white" style="background-color:crimson">
                الوصف بالعربية
            </div>
            <span asp-validation-for="DescrptionAr" class="text-danger"></span>
            <textarea class="summernote" asp-for="DescrptionAr"></textarea>
        </div>
        <div class="col-md-6">
            <div class="p-3 mb-2 text-white" style="background-color:crimson">
                الوصف بالانجليزية
            </div>
            <span asp-validation-for="DescrptionEn" class="text-danger"></span>
            <textarea class="summernoteEN" asp-for="DescrptionEn"></textarea>

        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" name="Image" class="form-control" />
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="حفظ" class="btn btn-primary" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">الغاء</button>
    </div>
</form>
<script>
    PageLoadActions();
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $('.summernote').summernote({
        placeholder: 'ادخل المحتوى  ...',
        tabsize: 1,
        height: 150
    });
</script>
<script>
    $('.summernoteEN').summernote({
        placeholder: 'ادخل المحتوى باللغة الانجليزية  ...',
        tabsize: 1,
        height: 150
    });
</script>