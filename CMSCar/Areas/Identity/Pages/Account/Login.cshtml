@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = null;
}


<!DOCTYPE html>

<html lang="en">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <meta charset="utf-8" />
    <title>موقع سيارات |  تسجيل الدخول</title>
    <meta name="description" content="Blank inner page examples">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">

    <link href="~/Metronic/vendors/base/vendors.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/Metronic/base/style.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/Metronic/datatables.bootstrap-rtl.css" rel="stylesheet" type="text/css" />


    @*<link href="~/Metronic/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
        <link href="~/Metronic/base/style.bundle.css" rel="stylesheet" type="text/css" />
        <link href="~/Metronic/datatables.bootstrap.css" rel="stylesheet" type="text/css" />*@



    <link rel="shortcut icon" href="~/Images/favicon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">
    <style>
        input, select {
            border-width: 1px !important;
            border-color: rgba(219, 219, 219, 0.93) !important;
            border-style: solid !important;
            padding-right: 10px !important
        }

        .iti__country-list {
            margin-left: 100px !important;
            text-align: right !important;
            max-width: 300px !important
        }
    </style>
</head>
<!-- end::Head -->
<!-- end::Body -->

<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">

    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-login m-login--signin  m-login--5" style="background-image: url(/BG/bg-3.jpg)" id="m_login">
            <div class="m-login__wrapper-1 m-portlet-full-height" style="margin-top:100px!important">
                <div class="m-login__wrapper-1-1">
                    <div class="m-login__contanier">
                        <div class="m-login__content">
                            <div class="m-login__logo">
                                <a>
                                    <img width="100%" height="100%">
                                </a>
                            </div>
                            <div class="m-login__desc">
                                <img class="rounded" src="/logo.png" width="100%" height="100%">
                            </div>

                        </div>
                    </div>
                    <div class="m-login__border">
                        <div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="m-login__wrapper-2 m-portlet-full-height">
                <div class="m-login__contanier">
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h1 class="m-login__title">سجل الدخول الي حسابك</h1>
                        </div>
                        <form id="account" method="post" class="m-login__form m-form">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-input--air" asp-for="Input.Email" type="text" placeholder="رقم الجوال" autocomplete="off">
                            </div><br />

                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-input--air" asp-for="Input.Password" type="Password" placeholder="كلمة المرور">
                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left">
                                    <label class="checkbox m-checkbox--focus">
                                        <input style='width:20px;height:20px;margin-left:5px' asp-for="Input.RememberMe" type="checkbox"> <b style="margin-bottom:20px!important">تذكرني</b>
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div>
                                <h5>
                                    <a href="/Identity/Account/ForgotPassword" class="m-link">
                                        هل نسيت كلمة المرور؟
                                    </a>
                                </h5>
                            </div>
                            @*<div>
                                    <h4>
                                        ليس لديك حساب؟
                                        <a href="/Identity/Account/Register" class="m-link">
                                            تسجيل كمستخدم جديد
                                        </a>
                                    </h4>
                                </div>*@
                            <div class="m-login__form-action">
                                <button type="submit" style="font-size:16px" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air"><b>تسجيل الدخول</b></button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Metronic/vendors/base/vendors.bundle.js" type="text/javascript"></script>

    <script src="~/Metronic/data-local.js" type="text/javascript"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
