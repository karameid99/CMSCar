        /// Accordion Branches
        $('.toggle').on('click', function (e) {
            e.preventDefault();

            var $this = $(this);

            if ($this.next().hasClass('show')) {
                $this.next().removeClass('show');
                $this.next().slideUp(350);
                $this.children('i').removeClass('fa-minus').addClass('fa-plus');
            } else if ($this.next().hasClass('showz')) {
                $this.children('i').removeClass('fa-minus').addClass('fa-plus');
